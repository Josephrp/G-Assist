      "properties": {
        "analysis_results": {
          "type": "string",
          "description": "JSON string of stock analysis results"
        },
        "user_preferences": {
          "type": "string",
          "description": "JSON string of user investment preferences",
          "optional": true
        },
        "target_count": {
          "type": "integer",
          "description": "Target number of stocks to select",
          "optional": true
        },
        "min_count": {
          "type": "integer",
          "description": "Minimum number of stocks to select",
